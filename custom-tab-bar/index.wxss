.tab-bar {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 56px;
  background: #225353;
  border-radius: 28px;
  display: flex;
  padding: 0 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.tab-bar-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tab-bar-item.active {
  color: #FFD700;
}

.tab-bar-item .iconfont {
  font-size: 24px;
  margin-bottom: 4px;
}

.tab-bar-item text:last-child {
  font-size: 12px;
} 