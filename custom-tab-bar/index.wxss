.tab-bar {
  position: fixed;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 56px;
  background: #22333b;
  border-radius: 28px;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}

.tab-bar-item {
  width: 44px;
  height: 44px;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content: center;
  color: #fff;
}

.tab-bar-item.active {
  background: #fff;
  border-radius: 50%;
}

.tab-bar-item image {
  width: 24px;
  height: 24px;
}

.tab-bar-item text:last-child {
  font-size: 12px;
} 