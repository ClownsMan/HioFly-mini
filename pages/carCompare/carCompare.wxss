.car-select-area {
  padding: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.car-slot {
  width: 40%;
  height: 160px;
  border: 2px dashed #ddd;
  border-radius: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

.car-slot.has-car {
  border-style: solid;
  border-color: var(--primary-color);
}

.car-image {
  width: 100%;
  height: 100px;
  margin-bottom: 10px;
}

.car-name {
  font-size: 14px;
  color: var(--text-color);
  text-align: center;
}

.placeholder {
  color: #999;
  font-size: 14px;
}

.vs-icon {
  width: 40px;
  height: 40px;
  background: var(--primary-color);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
}

.compare-content {
  margin-top: 20px;
  height: calc(100vh - 220px);
}

.compare-section {
  background: #fff;
  margin-bottom: 10px;
}

.section-header {
  padding: 15px;
  font-size: 16px;
  font-weight: 500;
  color: var(--primary-color);
  border-bottom: 1px solid #f5f5f5;
}

.param-item {
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.param-name {
  color: #666;
  font-size: 14px;
  margin-bottom: 8px;
}

.param-values {
  display: flex;
  justify-content: space-between;
}

.param-values text {
  width: 45%;
  font-size: 14px;
  color: var(--text-color);
}

.highlight {
  color: #ff6b6b !important;
  font-weight: 500;
}

/* 车型选择弹窗样式 */
.car-select-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20px 20px 0 0;
  padding: 20px;
  height: 70vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-header text {
  font-size: 16px;
  font-weight: 500;
}

.modal-header image {
  width: 20px;
  height: 20px;
}

.brand-filter {
  margin-bottom: 15px;
}

.brand-filter input {
  width: 100%;
  height: 40px;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 0 15px;
  font-size: 14px;
}

.car-list {
  height: calc(100% - 120px);
}

.car-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
}

.car-thumb {
  width: 80px;
  height: 60px;
  margin-right: 15px;
}

.car-info {
  flex: 1;
}

.car-brand {
  font-size: 12px;
  color: #666;
  display: block;
}

.car-model {
  font-size: 14px;
  color: var(--text-color);
  margin: 4px 0;
  display: block;
}

.car-price {
  font-size: 14px;
  color: #ff6b6b;
  font-weight: 500;
}

