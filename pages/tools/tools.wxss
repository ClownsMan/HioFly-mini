.container {
  height: 100vh;
  background: #619b8a;
}
.tools-grid {
  width: 100%;
  padding: 20px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
  box-sizing: border-box;
}

.tool-item {
  width: 40%;
  height: 60px;
  /* background: #fff; */
  border-radius: 12px;
  padding: 20px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  margin-bottom: 10px;
  position: relative;
}

.tool-item image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12px;
}

.tool-item .action-name {
  font-size: 14px;
  color: var(--text-color);
  position: absolute;
  left: 20px;
  bottom: 14px;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
} 

.tool-item .iconfont {
  color: #000;
  font-size: 26px;
  margin-bottom: 4px;
  margin-left: 4px;
}