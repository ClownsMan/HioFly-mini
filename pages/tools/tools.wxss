.tools-grid {
  width: 92%;
  margin: 20px auto;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.tool-item {
  background: #fff;
  border-radius: 12px;
  padding: 20px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}

.tool-item image {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}

.tool-item text {
  font-size: 14px;
  color: var(--text-color);
} 