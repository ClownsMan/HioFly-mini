.form-container {
  padding: 20px;
  background: #fff;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  display: block;
  color: #666;
  font-size: 14px;
  margin-bottom: 8px;
}

input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  font-size: 14px;
}

.picker-wrapper {
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-wrapper image {
  width: 20px;
  height: 20px;
}

.placeholder {
  color: #999;
  font-size: 14px;
}

.value {
  color: var(--text-color);
  font-size: 14px;
}

.submit-btn {
  margin-top: 30px;
  background: var(--primary-color);
  color: #fff;
  height: 44px;
  line-height: 44px;
  border-radius: 22px;
  font-size: 16px;
}

/* 车型选择弹窗样式 */
.car-select-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20px 20px 0 0;
  padding: 20px;
  height: 70vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-header text {
  font-size: 16px;
  font-weight: 500;
}

.modal-header image {
  width: 20px;
  height: 20px;
}

.brand-filter {
  margin-bottom: 15px;
}

.brand-filter input {
  width: 100%;
  height: 40px;
  background: #f5f5f5;
  border-radius: 20px;
  padding: 0 15px;
  font-size: 14px;
}

.car-list {
  height: calc(100% - 120px);
}

.car-item {
  display: flex;
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
  align-items: center;
}

.car-thumb {
  width: 80px;
  height: 60px;
  margin-right: 15px;
}

.car-info {
  flex: 1;
}

.car-brand {
  font-size: 12px;
  color: #666;
  display: block;
}

.car-model {
  font-size: 14px;
  color: var(--text-color);
  margin: 4px 0;
  display: block;
}

