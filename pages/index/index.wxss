.container {
  min-height: 100vh;
  background: #253334;
  box-sizing: border-box;
}
.content {
  padding: 20px;
}

.car-card {
  background: #f7f3f0;
  border-radius: 0 0 12px 12px;
  padding: 20px;
  display: flex;
  height: 160px;
  box-sizing: border-box;
  justify-content: space-between;
  margin-bottom: 20px;
}

.car-info {
  display: flex;
  flex-direction: column;
}

.plate-number {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 8px;
}

.car-model {
  font-size: 14px;
  color: #666;
  margin-bottom: 4px;
}

.mileage {
  font-size: 12px;
  color: #999;
}

.car-action {
  display: flex;
  align-items: center;
}

.action-text {
  font-size: 14px;
  color: #666;
  margin-right: 4px;
}

.arrow-icon {
  width: 200px;
}

.swiper {
  width: 100%;
  height: 100px;
  border-radius: 12px;
  overflow: hidden;
  margin-bottom: 20px;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.quick-actions {
  background: #000000;
  border-radius: 12px;
  padding: 20px;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 8px;
}

.action-name {
  font-size: 12px;
  color: #333;
}