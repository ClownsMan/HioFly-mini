.banner {
  width: 100%;
  height: 200px;
}

.swiper {
  width: 92%;
  height: 100px;
  margin: 15px auto;
  border-radius: 12px;
  overflow: hidden;
}

.swiper image {
  width: 100%;
  height: 100%;
}

.quick-tools {
  width: 92%;
  margin: 20px auto;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 15px;
  background: #fff;
  padding: 15px;
  border-radius: 12px;
}

.tool-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.tool-item image {
  width: 40px;
  height: 40px;
  margin-bottom: 8px;
}

.tool-item text {
  font-size: 12px;
  color: var(--text-color);
}

.car-model-container {
  width: 100%;
  height: 200px;
  background: linear-gradient(to bottom, #225353, #1a3f3f);
  position: relative;
  overflow: hidden;
}

.car-viewer {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.car-image {
  width: 90%;
  height: 180px;
  transition: transform 0.1s ease;
}

.control-buttons {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
}

.rotate-hint {
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20px;
  padding: 6px 12px;
  display: flex;
  align-items: center;
}

.rotate-hint image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.rotate-hint text {
  color: #fff;
  font-size: 12px;
} 