.container {
  min-height: 100vh;
  background: #22333b;
  // background: #619b8a;
}

.user-info {
  padding: 40px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  border: 3px solid #fff;
  margin-bottom: 15px;
}

.user-detail {
  text-align: center;
}

.nickname {
  color: #fff;
  font-size: 20px;
  font-weight: 500;
  margin-bottom: 5px;
  display: block;
}

.location {
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
}

.function-grid {
  background: #f7f3f0;
  padding: 30px 20px;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
}

.function-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-wrapper {
  width: 50px;
  height: 50px;
  background: #f5f5f5;
  border-radius: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8px;
}

.iconfont {
  font-size: 24px;
  color: #333;
}

.function-name {
  font-size: 12px;
  color: #666;
} 