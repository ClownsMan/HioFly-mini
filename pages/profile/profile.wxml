<view class="container">
  <!-- 用户信息区域 -->
  <view class="user-info" bindtap="login">
    <image class="avatar" src="{{userInfo.avatarUrl || '/assets/images/default-avatar.png'}}"/>
    <text class="nickname">{{userInfo.nickName || '点击登录'}}</text>
  </view>
  
  <!-- 功能列表 -->
  <view class="function-list">
    <view class="function-item" bindtap="navigateTo" data-url="/pages/bindCar/bindCar">
      <text>绑定车辆信息</text>
      <image src="/assets/icons/arrow-right.png"/>
    </view>
    <view class="function-item" bindtap="navigateTo" data-url="/pages/maintenance/maintenance">
      <text>维护保养时间</text>
      <image src="/assets/icons/arrow-right.png"/>
    </view>
  </view>
</view> 