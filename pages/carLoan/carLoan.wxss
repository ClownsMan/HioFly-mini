.container {
  height: 100%;
  padding: 15px;
}

.form-container {
  background: #fff;
  padding: 20px;
  border-radius: 12px;
  height: 100%;
}

.form-item {
  margin-bottom: 20px;
}

.label {
  display: block;
  color: #666;
  margin-bottom: 8px;
  font-size: 14px;
}

input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  box-sizing: border-box;
}

.picker {
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  display: flex;
  align-items: center;
}

.calculate-btn {
  background: var(--primary-color);
  color: #fff;
  margin-top: 30px;
}

.result-container {
  background: #fff;
  margin: 15px;
  padding: 20px;
  border-radius: 12px;
}

.result-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.result-item.highlight {
  margin: 20px 0;
  padding: 15px 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.result-item .value {
  font-weight: 500;
  color: var(--primary-color);
}

.highlight .value {
  font-size: 20px;
  color: #ff6b6b;
} 