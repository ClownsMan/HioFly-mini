.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10px 15px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.search-bar input {
  flex: 1;
  height: 36px;
  background: #f5f5f5;
  border-radius: 18px;
  padding: 0 15px;
  margin-right: 10px;
  font-size: 14px;
}

.search-btn {
  padding: 0 15px;
  height: 36px;
  line-height: 36px;
  background: var(--primary-color);
  color: #fff;
  font-size: 14px;
  border-radius: 18px;
}

.station-list {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120px;
  background: #fff;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.station-item {
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.station-info {
  margin-bottom: 8px;
}

.name {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
}

.address {
  font-size: 12px;
  color: #666;
  margin: 4px 0;
  display: block;
}

.distance {
  font-size: 12px;
  color: #999;
}

.status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.available {
  font-size: 12px;
  color: #28a745;
}

.price {
  font-size: 14px;
  color: #ff6b6b;
  font-weight: 500;
} 