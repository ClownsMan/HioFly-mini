.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 10px 15px;
  background: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.search-bar input {
  flex: 1;
  height: 36px;
  background: #f5f5f5;
  border-radius: 18px;
  padding: 0 15px;
  margin-right: 10px;
  font-size: 14px;
}

.filter-btn {
  width: 36px;
  height: 36px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
}

.filter-btn image {
  width: 20px;
  height: 20px;
}

.search-btn {
  padding: 0 15px;
  height: 36px;
  line-height: 36px;
  background: var(--primary-color);
  color: #fff;
  font-size: 14px;
  border-radius: 18px;
}

.parking-list {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 180px;
  background: #fff;
  box-shadow: 0 -2px 6px rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.parking-item {
  padding: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.name-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 5px;
}

.name {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
}

.status {
  font-size: 12px;
  padding: 2px 8px;
  border-radius: 10px;
}

.status.available {
  background: #e8f5e9;
  color: #28a745;
}

.status.busy {
  background: #ffebee;
  color: #dc3545;
}

.address {
  font-size: 12px;
  color: #666;
  margin: 4px 0;
  display: block;
}

.distance {
  font-size: 12px;
  color: #999;
}

.price-info {
  margin-top: 8px;
  display: flex;
  align-items: baseline;
}

.price {
  font-size: 18px;
  color: #ff6b6b;
  font-weight: 500;
}

.unit {
  font-size: 12px;
  color: #999;
  margin-left: 2px;
}

.spaces {
  font-size: 12px;
  color: #28a745;
  margin-left: auto;
}

/* 筛选弹窗样式 */
.filter-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20px 20px 0 0;
  padding: 20px;
}

/* 在原有样式基础上添加筛选弹窗的样式 */

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15px;
  border-bottom: 1px solid #f5f5f5;
}

.filter-header text {
  font-size: 16px;
  font-weight: 500;
}

.filter-header image {
  width: 20px;
  height: 20px;
}

.filter-section {
  margin-top: 20px;
}

.section-title {
  font-size: 14px;
  color: #666;
  margin-bottom: 12px;
  display: block;
}

.price-range {
  display: flex;
  align-items: center;
  gap: 10px;
}

.price-range input {
  flex: 1;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  font-size: 14px;
}

.type-options {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.type-item {
  padding: 8px 15px;
  border: 1px solid #ddd;
  border-radius: 20px;
  font-size: 14px;
  color: #666;
}

.type-item.selected {
  background: var(--primary-color);
  color: #fff;
  border-color: var(--primary-color);
}

.filter-buttons {
  margin-top: 30px;
  display: flex;
  gap: 15px;
}

.reset-btn, .confirm-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  text-align: center;
  border-radius: 22px;
  font-size: 16px;
}

.reset-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: var(--primary-color);
  color: #fff;
} 