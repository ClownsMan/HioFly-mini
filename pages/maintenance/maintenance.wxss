.car-info {
  background: var(--primary-color);
  padding: 20px;
  display: flex;
  align-items: center;
}

.car-image {
  width: 100px;
  height: 70px;
  margin-right: 15px;
}

.car-detail {
  flex: 1;
  color: #fff;
}

.car-name {
  font-size: 16px;
  font-weight: 500;
  display: block;
  margin-bottom: 5px;
}

.plate-number {
  font-size: 14px;
  display: block;
  margin-bottom: 5px;
}

.mileage {
  font-size: 12px;
  opacity: 0.8;
}

.maintenance-alert {
  margin: 15px;
  background: #fff;
  border-radius: 12px;
  padding: 15px;
}

.alert-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.alert-header .title {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
}

.alert-header .date {
  font-size: 14px;
  color: #666;
}

.alert-content {
  background: #f8f9fa;
  padding: 12px;
  border-radius: 8px;
}

.alert-content .desc {
  font-size: 14px;
  color: #ff6b6b;
  display: block;
  margin-bottom: 5px;
}

.alert-content .mileage {
  font-size: 12px;
  color: #666;
}

.maintenance-records {
  margin: 15px;
  background: #fff;
  border-radius: 12px;
  padding: 15px;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.section-header text {
  font-size: 16px;
  font-weight: 500;
  color: var(--text-color);
}

.add-btn {
  padding: 0 15px;
  height: 32px;
  line-height: 32px;
  background: var(--primary-color);
  color: #fff;
  font-size: 14px;
  border-radius: 16px;
}

.record-item {
  border-bottom: 1px solid #f5f5f5;
  padding: 15px 0;
}

.record-date {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.record-date .date {
  font-size: 14px;
  color: var(--text-color);
}

.record-date .mileage {
  font-size: 12px;
  color: #666;
}

.service-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8px;
}

.service-name {
  font-size: 14px;
  color: #666;
}

.service-price {
  font-size: 14px;
  color: #ff6b6b;
}

.record-total {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 10px;
  padding-top: 10px;
  border-top: 1px dashed #f5f5f5;
}

.record-total text {
  font-size: 14px;
  color: #666;
}

.total-price {
  font-size: 16px;
  color: #ff6b6b;
  font-weight: 500;
  margin-left: 5px;
}

/* 添加记录弹��样式 */
.add-record-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20px 20px 0 0;
  padding: 20px;
  max-height: 90vh;
  overflow-y: auto;
}

/* 在原有样式基础上添加 */

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.modal-header text {
  font-size: 16px;
  font-weight: 500;
}

.modal-header image {
  width: 20px;
  height: 20px;
}

.form-item {
  margin-bottom: 15px;
}

.label {
  display: block;
  color: #666;
  font-size: 14px;
  margin-bottom: 8px;
}

.picker-wrapper {
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-wrapper image {
  width: 20px;
  height: 20px;
}

.service-list {
  margin-top: 20px;
}

.service-item {
  display: flex;
  align-items: center;
  gap: 10px;
  margin-bottom: 10px;
}

.service-name {
  flex: 2;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
}

.service-price {
  flex: 1;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
}

.delete-btn {
  width: 24px;
  height: 24px;
  padding: 4px;
}

.add-service-btn {
  width: 100%;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background: #f5f5f5;
  color: #666;
  border-radius: 6px;
  margin-top: 10px;
}

.modal-buttons {
  display: flex;
  gap: 15px;
  margin-top: 30px;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 44px;
  line-height: 44px;
  text-align: center;
  border-radius: 22px;
  font-size: 16px;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: var(--primary-color);
  color: #fff;
}

